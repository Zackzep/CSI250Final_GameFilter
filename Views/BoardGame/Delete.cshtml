@model BoardGame

<div class="text-center">
    <h1>Delete Board Game</h1>
</div>

<div class="card">
    <div class="card-body">
        <h3 style="color: darkred">Are you sure you want to delete this?</h3>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>Title:</dt>
                    <dd>@Html.DisplayFor(model => model.Title)</dd>
                    <dt>Genre:</dt>
                    <dd>@Html.DisplayFor(model => model.Genre.Name)</dd>
                    <dt>Player Count:</dt>
                    <dd>@Html.DisplayFor(model => model.PlayerCount)</dd>
                    <dt>Release Year:</dt>
                    <dd>@Html.DisplayFor(model => model.ReleaseYear)</dd>
                    <dt>Complexity (1-5):</dt>
                    <dd>@Html.DisplayFor(model => model.Complexity)</dd>
                    <dt>Cost:</dt>
                    <dd>@Html.DisplayFor(model => model.Cost)</dd>
                    <dt>Publisher:</dt>
                    <dd>@Html.DisplayFor(model => model.Publisher.Name)</dd>
                </dl>
            </div>
        </div>
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>