@model BoardGame

<div class="text-center">
    <h1>Board Game Details</h1>
</div>

<div class="card">
    <div class="card-body">
        <h3>Details for @Model.Title</h3>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>Title:</dt>
                    <dd>@Html.DisplayFor(model => model.Title)</dd>
                    <dt>Genre:</dt>
                    <dd>@Html.DisplayFor(model => model.Genre.Name)</dd>
                    <dt>Player Count:</dt>
                    <dd>@Html.DisplayFor(model => model.PlayerCount)</dd>
                    <dt>Release Year:</dt>
                    <dd>@Html.DisplayFor(model => model.ReleaseYear)</dd>
                    <dt>Complexity (1-5):</dt>
                    <dd>@Html.DisplayFor(model => model.Complexity)</dd>
                    <dt>Cost:</dt>
                    <dd>@Html.DisplayFor(model => model.Cost)</dd>
                    <dt>Publisher:</dt>
                    <dd>@Html.DisplayFor(model => model.Publisher.Name)</dd>
                </dl>
            </div>
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

