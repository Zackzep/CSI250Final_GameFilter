@model IEnumerable<Genre>

<div class="filter-section">
    <h1 class="text-center">Genre Index</h1>
    <div class="row mb-4">
        <div class="col-sm-6">
            <div class="form-group">
                <form asp-action="Index" method="get">
                    <button type="submit" name="sort" value="ascending" class="btn btn-outline-primary">Sort Ascending</button>
                </form>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <form asp-action="Index" method="get">
                    <button type="submit" name="sort" value="descending" class="btn btn-outline-primary">Sort Descending</button>
                </form>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Genre</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <a>Actions</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Genre genre in Model)
        {
            <tr>
                <td>
                    @genre.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@genre.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@genre.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>