@model IEnumerable<Publisher>

<div class="filter-section">
    <h1 class="text-center">Publisher Index</h1>
    <div class="row mb-4">
        <div class="col-sm-6">
            <div class="form-group">
                <form asp-action="Index" method="get">
                    <button type="submit" name="sortName" value="ascendingName" class="btn btn-outline-primary">Sort Ascending By Name</button>
                    <button type="submit" name="sortName" value="descendingName" class="btn btn-outline-primary">Sort Descending By Name</button>
                </form>
            </div>
            <div class="form-group">
                <label class="form-label">
                    Search By Publisher Country:
                </label>
                <input class="form-control" type="text" name="country" />
                <input type="submit" value="Search" class="btn btn-outline-primary mt-2" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <form asp-action="Index" method="get">
                    <button type="submit" name="sortCity" value="ascendingCity" class="btn btn-outline-primary">Sort Ascending By City</button>
                    <button type="submit" name="sortCity" value="descendingCity" class="btn btn-outline-primary">Sort Descending By City</button>
                </form>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Genre</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                <a>Actions</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Publisher publisher in Model)
        {
            <tr>
                <td>
                    @publisher.Name
                </td>
                <td>
                    @publisher.City
                </td>
                <td>
                    @publisher.Country
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@publisher.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@publisher.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@publisher.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
